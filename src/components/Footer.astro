---
import { config } from "@site/config";
---
<footer class="mx-auto flex items-center justify-between w-full py-8 px-4 sm:px-8 md:px-16 xl:px-32 mt-auto">
    <p class="text-sm font-medium text-outline mx-auto lg:mx-0 text-center lg:text-start">
        &copy; 2025 
        <a href="/" class="font-header font-semibold hover:opacity-70 tap:opacity-65 transition-all">{config.siteName}</a>. 
        All rights reserved.
    </p>

    <nav class="gap-8 text-sm font-semibold text-on-surface-variant hidden lg:flex">
        {config.footerLinks.map((link) => (
            <a href={link.url} class="hover:opacity-70 tap:opacity-65 transition-all">{link.title}</a>
        ))}
    </nav>
</footer>